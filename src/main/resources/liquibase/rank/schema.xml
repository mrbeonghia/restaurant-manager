<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet id="create_table_rank" author="HopDV">
		<createTable tableName="rank">

			<column name="id" type="int(11)" autoIncrement="true">
				<constraints primaryKey="true"/>
			</column>
			<column name="user_id" type="int(11)"/>
			<column name="rank" type="varchar(60)"/>
			<column name="number_stamp" type="int(11)"/>
			<column name="expired" type="boolean" defaultValueBoolean="false"/>

			<column name="created_time" type="TIMESTAMP"/>
			<column name="updated_time" type="TIMESTAMP"/>
			<column name="created_by_user_id" type="int(11)"/>
			<column name="updated_by_user_id" type="int(11)"/>
			<column name="is_deleted" type="boolean" defaultValueBoolean="false"/>
		</createTable>

		<modifySql dbms="mysql">
			<append value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_unicode_520_ci"/>
		</modifySql>
	</changeSet>

	<changeSet author="HopDV" id="created_unique_user_id_is_deleted">
		<addUniqueConstraint columnNames="user_id, is_deleted" tableName="rank"/>
	</changeSet>


</databaseChangeLog>