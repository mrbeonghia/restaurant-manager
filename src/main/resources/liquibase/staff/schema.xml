<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet id="create_table_staff" author="HopDV">
		<createTable tableName="staff">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>

			<column name="name" type="varchar(60)" />
			<column name="avatar_url" type="varchar(500)" />
			<column name="store_id" type="int(11)" />
			<column name="sex" type="varchar(20)" />
			<column name="phone_number" type="varchar(20)" />
			<column name="birthday" type="varchar(30)" />
			<column name="month_day" type="varchar(60)" />
			<column name="tue_day" type="varchar(60)" />
			<column name="wed_day" type="varchar(60)" />
			<column name="thu_day" type="varchar(60)" />
			<column name="fri_day" type="varchar(60)" />
			<column name="sat_day" type="varchar(60)" />
			<column name="sun_day" type="varchar(60)" />

			<column name="created_time" type="TIMESTAMP" />
			<column name="updated_time" type="TIMESTAMP" />
			<column name="created_by_user_id" type="int(11)"/>
			<column name="updated_by_user_id" type="int(11)"/>
			<column name="is_deleted" type="boolean" defaultValueBoolean="false"/>
		</createTable>

		<modifySql dbms="mysql">
			<append
				value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_unicode_520_ci" />
		</modifySql>
	</changeSet>


	<changeSet author="NghiaNT" id="add_column_email_rating_average_skill_self_introduction_table_staff">
		<addColumn tableName="staff">
			<column name="rating_average" type="float(3,2)" />
			<column name="skill_id" type="int(11)" />
			<column name="self_introduction" type="text" />
			<column name="email" type="varchar(60)" />
		</addColumn>
	</changeSet>

	<changeSet author="NghiaNT" id="add_column_password_is_active_table_staff">
		<addColumn tableName="staff">
			<column name="password" type="varchar(255)" />
			<column name="is_active" type="boolean" defaultValueBoolean="true" />
		</addColumn>
	</changeSet>

	<changeSet  author="NghiaNT"  id="drop_columns_weekday_table_staff">
		<dropColumn
					 tableName="staff">
			<column  name="month_day"/>
			<column  name="tue_day"/>
			<column  name="wed_day"/>
			<column  name="thu_day"/>
			<column  name="fri_day"/>
			<column  name="sat_day"/>
			<column  name="sun_day"/>
		</dropColumn>
	</changeSet>

	<changeSet author="NghiaNT" id="add_column_password_encode_table_staff">
		<addColumn tableName="staff">
			<column name="password_encode" type="varchar(255)" />
		</addColumn>
	</changeSet>

</databaseChangeLog>
