<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet id="create_table_user_entity" author="HopDV">
		<createTable tableName="user_entity">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="store_id" type="int(11)" />
			<column name="user_name" type="varchar(60)" />
			<column name="name" type="varchar(60)" />
			<column name="email" type="varchar(60)" />
			<column name="type" type="varchar(60)" />
			<column name="avatar_url" type="varchar(500)" />
			<column name="phone_number" type="varchar(20)" />
			<column name="birthday" type="varchar(30)" />
			<column name="sex" type="varchar(20)" />
			<column name="password" type="varchar(255)" />
			<column name="store_default_id" type="int(11)" />
			<column name="district_id" type="int(11)" />
			<column name="city_id" type="int(11)" />
			<column name="address" type="varchar(500)"/>
			<column name="qr_code" type="text" />
			<column name="created_time" type="TIMESTAMP" />
			<column name="updated_time" type="TIMESTAMP" />
			<column name="created_by_user_id" type="int(11)"/>
			<column name="updated_by_user_id" type="int(11)"/>
			<column name="is_deleted" type="boolean" defaultValueBoolean="false"/>
			<column name="is_active" type="boolean" defaultValueBoolean="false" />
		</createTable>

		<modifySql dbms="mysql">
			<append
				value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_unicode_520_ci" />
		</modifySql>
	</changeSet>

<!--	<changeSet author="HopDV" id="created_unique_email_is_deleted">-->
<!--		<addUniqueConstraint columnNames="email, is_deleted" tableName="user_entity"/>-->
<!--	</changeSet>-->

	<changeSet author="NghiaNT" id="add_column_point_table_user_entity">
		<addColumn tableName="user_entity">
			<column name="number_of_points" type="int"/>
		</addColumn>
	</changeSet>

	<changeSet author="NghiaNT" id="add_column_customer_id_table_user_entity">
		<addColumn tableName="user_entity">
			<column name="customer_id" type="bigint"/>
		</addColumn>
	</changeSet>

	<changeSet author="NghiaNT" id="add_column_furigana_name_table_user_entity">
		<addColumn tableName="user_entity">
			<column name="furigana_name" type="varchar(60)"/>
		</addColumn>
	</changeSet>

<!--	<changeSet  author="NghiaNT"  id="drop_unique_constraint_table_user_entity">-->
<!--		<dropUniqueConstraint-->
<!--							   constraintName="email"-->
<!--							   tableName="user_entity"-->
<!--							   uniqueColumns="email, is_deleted"/>-->
<!--	</changeSet>-->

	<changeSet author="NghiaNT" id="created_unique_constraint_table_user_entity">
		<addUniqueConstraint columnNames="email, is_deleted, is_active" tableName="user_entity"/>
	</changeSet>

	<changeSet author="NghiaNT" id="add_column_background_disease_table_user_entity">
		<addColumn tableName="user_entity">
			<column name="background_disease" type="text"/>
		</addColumn>
	</changeSet>
</databaseChangeLog>
