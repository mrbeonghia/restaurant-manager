<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet id="create_table_setting" author="HopDV">
		<createTable tableName="setting">

			<column name="id" type="int(11)" autoIncrement="true">
				<constraints primaryKey="true"/>
			</column>
			<column name="qr_code" type="varchar(255)"/>
			<column name="link" type="text"/>
			<column name="is_deleted" type="boolean" defaultValueBoolean="false"/>
		</createTable>

		<modifySql dbms="mysql">
			<append value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_unicode_520_ci"/>
		</modifySql>
	</changeSet>

</databaseChangeLog>