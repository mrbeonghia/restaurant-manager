<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet id="create_table_skill_of_staff" author="NghiaNT">
		<createTable tableName="skill_of_staff">

			<column name="id" type="int(11)" autoIncrement="true">
				<constraints primaryKey="true"/>
			</column>
			<column name="staff_id" type="int(11)"/>
			<column name="skill_id" type="int(11)"/>
			<column name="skill_name" type="varchar(256)"/>


			<column name="created_time" type="TIMESTAMP"/>
			<column name="updated_time" type="TIMESTAMP"/>
			<column name="created_by_user_id" type="int(11)"/>
			<column name="updated_by_user_id" type="int(11)"/>
			<column name="is_deleted" type="boolean" defaultValueBoolean="false"/>
		</createTable>

		<modifySql dbms="mysql">
			<append value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_unicode_520_ci"/>
		</modifySql>
	</changeSet>

</databaseChangeLog>
